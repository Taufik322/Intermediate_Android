<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.intermediateandroid.ui">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IntermediateAndroid">
        <activity
            android:name="com.example.ui.AddStoryActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD8wcD6IqpvOASLTP9MCYrnxCpXvBos--s" />

        <activity
            android:name="com.example.ui.MapsActivity"
            android:exported="false"
            android:label="@string/title_activity_maps" />
        <activity
            android:name="com.example.ui.CameraActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ui.StoryDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ui.HomeActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ui.SignupActivity"
            android:exported="false"
            android:theme="@style/LoginTheme" />
        <activity
            android:name="com.example.ui.LoginActivity"
            android:exported="true"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>